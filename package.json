{
  "name": "o2-systems",
  "version": "1.0.11",
  "description": "Aplicaci√≥n de escritorio ERP",
  "main": "electron/main.js",
  "author": "Owen Daniel de Jesus Lopez",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix backend\"",
    "dev:react": "npm --prefix frontend run dev",
    "dev:electron": "cross-env NODE_ENV=development wait-on http://localhost:5173 && electron .",
    "start-dev": "concurrently -k \"npm:dev:react\" \"npm:dev:electron\"",
    "build:frontend": "npm run build --prefix frontend",
    "build:backend": "npm run build --prefix backend",
    "build": "npm run build:frontend && npm run build:backend && electron-builder --publish always",
    "dist": "electron-builder --publish always"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.o2systems.erp",
    "productName": "O2 System",
    "publish": [
      {
        "provider": "github",
        "owner": "No-si-wq",
        "repo": "ERP-Empresarial",
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "asar": true,
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "afterPack": "electron/afterPack.js",
    "win": {
      "target": "nsis",
      "icon": "assets/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}
